doctype html
html(lang="en")
	head
		title= title
		link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto")
		link(rel="stylesheet" type="text/css" href="style.css")
	body
		block header
		nav
			if !user
				ul.navbar.navbar-left
					li.nav-logo
						a(href="/") FMP Control
				ul.navbar.navbar-right
					li.nav-item
						a(href="register") Register
					li.nav-item
						a(href="login") Login
		.site-wrap
			h1 Join FMP
			form#register(action="/register" method="post")
				label Username:
					input(type="text" name="username" autocomplete="off" placeholder="Wastelander")
				label Password:
					input(type="password" name="password" autocomplete="off" placeholder="********")
				label Confirm Password:
					input(type="password" name="confirm-password" autocomplete="off" placeholder="********")
				input(type="submit" value="Create Account")