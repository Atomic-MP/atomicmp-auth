{
  "name": "auth-server",
  "version": "1.0.0",
  "description": "A central backend for AtomicMP",
  "main": "dist/server.js",
  "engines": {
    "node": "10.10.0"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/server.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/server.ts",
    "debug": "nodemon -r dotenv/config --nolazy --inspect",
    "format:js": "prettier --write 'src/**/*.js' 'src/*/!(node_modules)/**/*.js'",
    "lint:js": "eslint 'src/**/*.js' --ignore-path .gitignore",
    "lint:ts": "tslint --fix -c tslint.json 'src/**/*.{ts,tsx}'",
    "compile": "tsc",
    "pre-commit-lint": "lint-staged",
    "test": "ENV=test jest",
    "db-pull": "docker pull postgres",
    "db-init": "docker container create --name atomic-postgres --expose 5432 -p 5432:5432 -e POSTGRES_PASSWORD=$POSTGRES_PASSWORD -e POSTGRES_USER=$POSTGRES_USER -e POSTGRES_DB=$POSTGRES_DB -v atomic-postgres:/var/lib/postgresql/data postgres:9.6",
    "db-start": "docker start atomic-postgres",
    "db-stop": "docker stop atomic-postgres"
  },
  "pre-commit": [
    "pre-commit-lint",
    "test"
  ],
  "lint-staged": {
    "*.js": [
      "npm run format:js",
      "npm run lint:js",
      "git add"
    ],
    "*.ts": [
      "npm run lint:ts",
      "git add"
    ]
  },
  "author": "Miles Florence",
  "license": "ISC",
  "dependencies": {
    "@atomicmp/atomicmp-consts": "^1.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/faker": "^4.1.5",
    "@types/hex-rgb": "^4.1.1",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/knex": "^0.16.1",
    "@types/lodash.first": "^3.0.6",
    "@types/lodash.isempty": "^4.4.6",
    "@types/node": "^12.0.2",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/serve-favicon": "^2.2.30",
    "acorn": "^6.1.1",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "express-session": "^1.16.1",
    "hex-rgb": "^4.1.0",
    "http-errors": "^1.7.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.16.5",
    "lodash.first": "^3.0.0",
    "lodash.isempty": "^4.4.0",
    "moment": "^2.24.0",
    "nodemon": "^1.19.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.11.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-security": "^1.4.0",
    "faker": "^4.1.0",
    "jest": "^24.8.0",
    "jsdoc": "^3.6.2",
    "lint-staged": "^8.1.7",
    "pre-commit": "^1.2.2",
    "prettier-eslint": "^8.8.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "typescript-eslint-parser": "^22.0.0"
  }
}
